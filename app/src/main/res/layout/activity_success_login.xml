<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SuccessLoginActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="379dp"
			android:layout_gravity="center"
			android:paddingTop="70dp"
			android:src="@drawable/kindpng_3850336"></ImageView>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Succesful!"
			android:paddingTop="30dp"
			android:layout_gravity="center"
			android:fontFamily="@font/montserrat_semi_bold"
			android:textSize="40dp"></TextView>

		<TextView
			android:layout_width="331dp"
			android:layout_height="wrap_content"
			android:fontFamily="@font/montserrat_light"
			android:gravity="center"
			android:layout_gravity="center"
			android:text="You have succesfully change your password. Please use your new password when logging in."
			android:textSize="17dp"


	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>